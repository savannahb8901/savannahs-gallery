<div>
  <div>
    <h1>
      "<%= @the_piece.image %>" details
    </h1>

    <div>
      <div>
        <a href="/pieces">
          Go back
        </a>
      </div>
    </div>


    <dl>
  
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_piece.description %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_piece.image %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_piece.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_piece.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit piece
    </h2>

    <form action="/modify_piece/<%= @the_piece.id %>"  method="post" >
      
      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description"><%= @the_piece.description %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_piece.image %>">
      </div>

      <button>
        Update piece
      </button>
    </form>
  </div>
</div>

<hr>
