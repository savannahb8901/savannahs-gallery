<div>
  <div>
    <h1>
      Collections
    </h1>
  </div>
</div>

<hr>

<div class="card">
  <div class="card-body">
    At the end of every month, I publish a collection of my favorite things within the categories of food, music, clothing, and everything in-between.  
  </div>
</div>

<%=Item.all.where({ :collection => 2})%>

<hr>
<div>
  <div>
      <% @list_of_collections.each do |a_collection| %> 
      <!-- find out of a_collection which month I'm on and then -->
      <!-- limit list of items to only items that where created (created by field) matches month within list of items-->
      <% collection_month = a_collection.month %>
      <% if collection_month == "June"%>
      <% integer_month = 6 %>
      <% elsif  collection_month == "July"%>
      <% integer_month = 7 %>
      <% elsif  collection_month == "August"%>
      <% integer_month = 8 %>
      <% elsif  collection_month == "September"%>
      <% integer_month = 9 %>
      <% else integer_month = 12%>
      <% end %>

      <%limited_items = []%>

      <% @list_of_items.each do |item| %>
        <% created_month = Date.parse(item.created_at).month %>
        <% if created_month == integer_month %>
        <% limited_items.push(item) %>
        
        <% end %>

      



      <% limited_items.each do |an_item| %>
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= a_collection.name %></h5>
    <p class="card-text">See my <%= a_collection.name %> favorites</p>
    <a href="/items/<%= an_item.id %>" class="btn btn-primary">See Favorites</a>
  </div>
</div>
<% end %>
<% end %>

  </div>
</div>

<% end %>

<hr>
