<div>
  <div>
    <h1>
      Like #<%= @the_like.id %> details
    </h1>

    <div>
      <div>
        <a href="/likes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_like/<%= @the_like.id %>">
          Delete like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_like.user_id %>
      </dd>

      <dt>
        Piece
      </dt>
      <dd>
        <%= @the_like.piece_id %>
      </dd>

      <dt>
        Collection
      </dt>
      <dd>
        <%= @the_like.collection_id %>
      </dd>

      <dt>
        Item
      </dt>
      <dd>
        <%= @the_like.item_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit like
    </h2>

    <form action="/modify_like/<%= @the_like.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_like.user_id %>">
      </div>

      <div>
        <label for="piece_id_box">
          Piece
        </label>

        <input type="text" id="piece_id_box" name="query_piece_id" value="<%= @the_like.piece_id %>">
      </div>

      <div>
        <label for="collection_id_box">
          Collection
        </label>

        <input type="text" id="collection_id_box" name="query_collection_id" value="<%= @the_like.collection_id %>">
      </div>

      <div>
        <label for="item_id_box">
          Item
        </label>

        <input type="text" id="item_id_box" name="query_item_id" value="<%= @the_like.item_id %>">
      </div>

      <button>
        Update like
      </button>
    </form>
  </div>
</div>

<hr>
